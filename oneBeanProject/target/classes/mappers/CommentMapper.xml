<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ezen.mapper.commentMapper">

	<select id="commentList" resultType="commentVO">
		SELECT * FROM SHOP_QUESTION_COMMENT
		WHERE qidx = #{qidx}
	</select>
	
	<insert id="commentWrite" parameterType="commentVO">
		INSERT INTO SHOP_QUESTION_COMMENT(
			comIdx,
			qidx,
			comWriter,
			comContents
		) VALUES (
			commentSEQ.nextval,
			#{qidx},
			#{comWriter},
			#{comContents}
		)
	</insert>
	
	
	
</mapper>